{
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@spt/*": ["./types/*"]
    }
  },
  "exclude": ["node_modules", "server"]
}
